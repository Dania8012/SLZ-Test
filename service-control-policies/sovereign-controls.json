{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "04DenyRunInstancesWithoutTag",
      "Effect": "Deny",
      "Action": "ec2:RunInstances",
      "Resource": "arn:aws:ec2:*:*:instance/*",
      "Condition": {
        "Null": {
          "aws:RequestTag/DataClassification": "true"
        }
      }
    },
    {
      "Sid": "04DenyCreateRDSWithoutTag",
      "Effect": "Deny",
      "Action": "rds:CreateDBInstance",
      "Resource": "arn:aws:rds:*:*:db:*",
      "Condition": {
        "Null": {
          "aws:RequestTag/DataClassification": "true"
        }
      }
    },
    {
      "Sid": "05DenyUnencryptedRDS",
      "Effect": "Deny",
      "Action": [
        "rds:CreateDBInstance",
        "rds:CreateDBCluster"
      ],
      "Resource": "*",
      "Condition": {
        "BoolIfExists": {
          "rds:StorageEncrypted": "false"
        }
      }
    },
      {
      "Sid": "05DenyUnencryptedEBSVolumeCreation",
      "Effect": "Deny",
      "Action": "ec2:CreateVolume",
      "Resource": "*",
      "Condition": {
        "Bool": {
          "ec2:Encrypted": "false"
        }
      }
    },
    {
      "Sid": "05DenyEC2RunInstancesWithUnencryptedVolumes",
      "Effect": "Deny",
      "Action": "ec2:RunInstances",
      "Resource": "*",
      "Condition": {
        "Bool": {
          "ec2:Encrypted": "false"
        }
      }
    }
  ]
}